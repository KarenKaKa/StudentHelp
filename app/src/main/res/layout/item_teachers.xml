<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp"
    android:paddingVertical="12dp">

    <ImageView
        android:id="@+id/ivHead"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:background="#F4F4F4"
        android:src="@drawable/image_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="王子"
        android:textColor="#333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/ivHead"
        app:layout_constraintTop_toTopOf="@+id/ivHead" />

    <ImageView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_women"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintLeft_toRightOf="@+id/name"
        app:layout_constraintTop_toTopOf="@+id/name" />

    <TextView
        android:id="@+id/skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="二级心理咨询师"
        android:textColor="#333"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray_stroke_2"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp"
        android:text="个人成长"
        android:textColor="#737373"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivHead"
        app:layout_constraintLeft_toLeftOf="@+id/name" />

    <TextView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@drawable/shape_gray_stroke_2"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp"
        android:text="个人成长"
        android:textColor="#737373"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/label1"
        app:layout_constraintTop_toTopOf="@+id/label1" />

    <TextView
        android:id="@+id/label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@drawable/shape_gray_stroke_2"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp"
        android:text="个人成长"
        android:textColor="#737373"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/label2"
        app:layout_constraintTop_toTopOf="@+id/label1" />

    <TextView
        android:id="@+id/tvChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_solid_deb887_15"
        android:paddingHorizontal="25dp"
        android:paddingVertical="5dp"
        android:text="咨询"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>