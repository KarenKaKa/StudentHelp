<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/ivHead"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:src="@drawable/icon_home_head"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="张老师"
            app:layout_constraintBottom_toBottomOf="@+id/ivHead"
            app:layout_constraintLeft_toRightOf="@+id/ivHead"
            app:layout_constraintTop_toTopOf="@+id/ivHead" />

        <TextView
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="开始时间：2020-2-1 12:00"
            app:layout_constraintTop_toBottomOf="@+id/ivHead" />

        <TextView
            android:id="@+id/end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="结束时间：2020-2-1 12:00"
            app:layout_constraintTop_toBottomOf="@+id/start" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="预约地址："
            app:layout_constraintTop_toBottomOf="@+id/end" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/address" />

        <TextView
            android:id="@+id/tvChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_solid_deb887_15"
            android:paddingHorizontal="25dp"
            android:paddingVertical="5dp"
            android:text="同意"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivHead"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivHead" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>